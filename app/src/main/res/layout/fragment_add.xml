<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.AddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_add_image_barang"
            android:layout_width="250dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_add_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Nama Barang"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_add_image_barang" />

        <EditText
            android:id="@+id/et_add_lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Lokasi ditemukan"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_add_barang"
            app:layout_constraintStart_toStartOf="@+id/et_add_barang"
            app:layout_constraintTop_toBottomOf="@+id/et_add_barang" />

        <EditText
            android:id="@+id/et_add_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tanggal"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_add_lokasi"
            app:layout_constraintStart_toStartOf="@+id/et_add_lokasi"
            app:layout_constraintTop_toBottomOf="@+id/et_add_lokasi" />

        <Button
            android:id="@+id/btn_add_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Submit"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/btn_submit"
            app:layout_constraintEnd_toEndOf="@+id/et_add_tanggal"
            app:layout_constraintStart_toStartOf="@+id/et_add_tanggal"
            app:layout_constraintTop_toBottomOf="@+id/et_add_tanggal" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>